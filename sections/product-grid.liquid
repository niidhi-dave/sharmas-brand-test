<!-- Grid Section -->
<section class="product-grid">
  <div class="product-container">
    <div class="product-grid-title" ">
     <h1 id="product_title">{{ section.settings.product_grid_heading }}</h1>
    </div>
    <div class="product-grid-body">
      <ul>
        {% for block in section.blocks %}
          <li class="product-grid-item">
            <div class="product-grid-header">
              <div class="product-grid-image">
                {% if block.settings.product_image != blank %}
                  <img src="{{ block.settings.product_image.src | img_url: "master" }}" alt="{{ block.settings.product_title }}">
                {% endif %}
              </div>
            </div>
            <div class="product-grid-item-body">
              <h2>{{ block.settings.product_title }}</h2>
              {% if block.settings.product_star != blank %}
                <div class="rating">
                  {{ block.settings.product_star | raw }}
                </div>
              {% endif %}
              {% if block.settings.product_meta != blank %}
                <span class="product-ml">{{ block.settings.product_meta | raw }}</span>
              {% endif %}
              <span class="product-description">{{ block.settings.product_description }}</span>
              <button class="btn">BUY NOW - $99</button>
            </div>
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>
</section>
<!-- // Grid Section -->
 <div class="separator"></div>

