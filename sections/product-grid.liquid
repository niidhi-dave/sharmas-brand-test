{% schema %}
{
  "name": "Product Section",
  "settings": [
        {
          "type": "textarea",
          "id": "product_grid_heading",
          "label": "product heading",
          "default": "Your product heading here"
        }
],
  "presets" : [
    {
      "name" : "Product Grid"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Product Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "product_image",
          "label": "Select Product Image"
        },
        {
          "type": "text",
          "id": "product_title",
          "label": "product Title",
          "default": "Your product text here"
        },
        {
          "type": "html",
          "id": "product_star",
          "label": "product Star",
          "default": "Your product star here"
        },
        {
          "type": "html",
          "id": "product_meta",
          "label": "product meta",
          "default": "Your product Meta here"
        },
        {
          "type": "textarea",
          "id": "product_description",
          "label": "product description",
          "default": "Your product description here"
        }
      ]
    } 
  ]
}
{% endschema %}