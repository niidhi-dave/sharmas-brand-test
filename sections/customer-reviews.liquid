<section class="product-slider">
  <div class="product-slider-wrapper">
    {% for block in section.blocks %}
        <div class="product-item">
          <h2>{{ block.settings.review_heading }}</h2>
          <div class="product-image">
        <img src="{{ block.settings.review_product_image.src | img_url: "master" }}" alt="Customer reviews">
          </div>
          <div class="product-body">
            <div class="rating">
              {{ block.settings.review_star | raw }}
            </div>
            <p>{{ block.settings.customer_review }}</p>
            <div class="product-author">
              <span>{{ block.settings.customer_name }}</span>
              <p>{{ block.settings.customer_location }}</p>
            </div>
          </div>
        </div>

    {% endfor %}
  </div>
</section>

<script>
  $('.product-slider-wrapper').slick({
    slidesToShow: 4,
    slidesToScroll: 1,
    arrows: false,
    cssEase:'linear',
    infinite: true,
    responsive: [
      {
        breakpoint: 1120,
        settings: {
          slidesToShow: 3,
        }
      },
      {
        breakpoint: 992,
        settings: {
          slidesToShow: 2,
        }
      },
      {
        breakpoint: 480,
        settings: {
          slidesToShow: 1,
        }
      }
    ]
  });
</script>

{% schema %}
{
  "name": "Customer Reviews Section",
  "settings": [
],
  "presets" : [
    {
      "name" : "Customer Reviews"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Customer Reviews",
      "settings": [
        {
          "type": "text",
          "id": "review_heading",
          "label": "Enter review heading"
        },
        {
          "type": "image_picker",
          "id": "review_product_image",
          "label": "Select Product Image"
        },
        {
          "type": "html",
          "id": "review_star",
          "label": "Enter star"
        },
        {
          "type": "html",
          "id": "customer_review",
          "label": "Enter review"
        },

        {
          "type": "text",
          "id": "customer_name",
          "label": "Enter customer name"
        },
        {
          "type": "text",
          "id": "customer_location",
          "label": "Enter customer location"
        }
      ]
    } 
  ]
}
{% endschema %}